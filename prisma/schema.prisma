generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum RBTHState {
  VALID
  INVALID
  PRIVATE
}

model RBTH {
  link   String    @id @map("_id")
  asn    String
  org    String
  ip     String
  id     String
  since  String
  routes Int
  state  RBTHState

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Changes {
  id        String   @id @map("_id") @db.ObjectId
  etag      String   @unique
  createdAt DateTime @default(now())

  deleted String[]
  created String[]
  updated String[]
}
